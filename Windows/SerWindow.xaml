<Window x:Class="Kingsman.Windows.LogIn.SerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingsman.Windows.LogIn"
        mc:Ignorable="d"
        Title="SerWindow" Height="800" Width="1024"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список услуг"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"/>


        <Button x:Name="BtnGoToCart"
                Width="40"
                Height="40"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Margin="0 0 30 0"
                Background="{x:Null}"
                BorderThickness="0"
                Click="BtnGoToCart_Click">
            <Image Source="/Image/Icon/icons8-shopping-cart-30.png" />
        </Button>


        <ListView x:Name="LvService" 
                  Grid.Row="2" 
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray"
                            BorderThickness="2"
                            Width="200"
                            Height="350"
                            Margin="16"
                            CornerRadius="8">
                        <StackPanel>
                            <Image Height="180"
                                   Width="200" 
                                   Margin="8">
                                <Image.Source>
                                    <Binding Path ="Image">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/Image/Icon/defImg.jpeg</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <TextBlock Text="{Binding Name}"
                                       FontSize="18"
                                       Margin="5 3"/>
                            <TextBlock Text="{Binding Cost}"
                                       FontSize="18"
                                       Margin="5 3"/>
                            <TextBlock Text="{Binding Description}"
                                       FontSize="18"
                                       Margin="5 3"
                                       TextWrapping="Wrap" FontFamily="Arial Rounded MT Bold"/>

                            <WrapPanel HorizontalAlignment="Center" Width="180" Height="60">
                                <Button x:Name="BtnEdit"
                                    Width="40"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Margin="10 5 30 0"
                                    Background="{x:Null}"
                                    BorderThickness="0"
                                    Click="BtnEdit_Click">
                                    <Image Source="/Image/Icon/icons8-edit-64.png"/>
                                </Button>

                                <Button x:Name="BtnAddToCart"
                                    Width="40"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Margin="30 5 0 0"
                                    Background="{x:Null}"
                                    BorderThickness="0"
                                    Click="BtnAddToCart_Click">
                                    <Image Source="/Image/Icon/icons8-shopping-cart-30.png" />
                                </Button>

                                <Button x:Name="BtnDel"
                                    Width="40"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Margin="60 -40 30 0"
                                    Background="{x:Null}"
                                    BorderThickness="0"
                                    Click="BtnDel_Click">
                                    <Image Source="/Image/Icon/icons8-remove-50.png"/>
                                </Button>


                            </WrapPanel>

                        </StackPanel>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        


        <Button x:Name="BtnAddService"
                Grid.Row="3"
                Width="40"
                Height="40"
                Background="{x:Null}"
                BorderThickness="0"
                HorizontalAlignment="Right"
                Margin="0 0 20 0"
                Click="BtnAddService_Click">
            <Image Source="/Image/Icon/icons8-add-80.png"/>
        </Button>


        <Button x:Name="BtnClient"
                Content="Клиенты"
                FontSize="18"
                Grid.Row="3"
                Width="140"
                Height="40"
                Background="{x:Null}"
                BorderThickness="0"
                Margin="145,5,0,5"               
                HorizontalAlignment="Left"
                Click="BtnClient_Click">
        </Button>
        
        
        <Button x:Name="BtnEmployee"
                Content="Сотрудники"
                FontSize="18"
                Grid.Row="3"
                Width="140"
                Height="40"
                Background="{x:Null}"
                BorderThickness="0"
                Margin="295,5,0,5"
                HorizontalAlignment="Left"
                Click="BtnEmployee_Click">
        </Button>

        <Button x:Name="BtnBackService" 
                Content="Назад"
                FontSize="18"
                Grid.Row="3"
                Width="140"
                Height="40"
                Background="{x:Null}"
                BorderThickness="0"
                Margin="0,5,0,5"
                HorizontalAlignment="Left"
                Click="BtnBack_Click"/>

    </Grid>
</Window>
